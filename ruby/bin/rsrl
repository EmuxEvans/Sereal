#!/usr/bin/env ruby
require 'sereal'

content = ARGF.read
compress = Sereal::RAW

{'Sereal_SNAPPY' => Sereal::SNAPPY,'Sereal_SNAPPY_INCR' => Sereal::SNAPPY_INCR }.each do |k,v|
  if ENV[k]
    compress = v
  end
end
if content[0..3] == '=srl'
  Sereal.decode(content) do |x|
    STDOUT.write(x)
  end
else
  STDOUT.write(Sereal.encode(content, compress))
end
